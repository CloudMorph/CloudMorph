    <link rel="apple-touch-icon-precomposed" sizes="114x114" href="~/Content/images/apple-touch-icon-114-precomposed.png">
    <link rel="apple-touch-icon-precomposed" sizes="72x72" href="~/Content/images/apple-touch-icon-72-precomposed.png">
    <link rel="apple-touch-icon-precomposed" href="~/Content/images/apple-touch-icon-57-precomposed.png">
    @RenderSection("Header", false)
    <style type="text/css"> 
        @RenderSection("Styles", false)
    </style>
</head>
<body>
    <div class="navbar navbar-fixed-top">
      <div class="navbar-inner">
        <div class="container-fluid">
          <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </a>
          <a class="brand" href="~/">Cloud Morph</a>
          <div class="nav-collapse">
            <ul class="nav">
              <li class="active"><a href="#">Home</a></li>
              <li><a href="home/about">About</a></li>
              <li><a href="#contact">Contact</a></li>
            </ul>
            <p class="navbar-text pull-right">Logged in as <a href="#">username</a></p>
          </div><!--/.nav-collapse -->
        </div>
      </div>
    </div>

    <div class="container-fluid">
      <div class="row-fluid">
        <div class="span3">
          <div class="well sidebar-nav">
            <ul id="mnuMain" class="nav nav-list">
              <li class="nav-header"><a href="~/">Home</a></li>
              <li class="nav-header">Administration</li>
              <li id="mnuRealms"><a href="/realms">Realms</a></li>
              <li id="mnuPackages"><a href="/packages">Packages</a></li>
              <li><a href="/packages/management">Package Management</a></li>
              <li><a href="/packages/upload">Upload Packages</a></li>
              <li><a href="/hosts">Hosts</a></li>
              <li><a href="/packages/hosts">Hosts (backbone)</a></li>

              <li class="nav-header">Sidebar</li>
              <li><a href="#">Link</a></li>
              <li><a href="#">Link</a></li>
              <li><a href="#">Link</a></li>
            </ul>
          </div><!--/.well -->
        </div><!--/span-->
        <div class="span9">
          @RenderBody()
        </div><!--/span-->
      </div><!--/row-->

      <hr>

      <footer>
        <p>&copy; BlueMetal Architects 2012</p>
      </footer>

    </div><!--/.fluid-container-->
    
    <!-- Le javascript
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    <script src="~/Scripts/jquery-1.7.1.js" type="text/javascript"></script>
    <script src="~/Scripts/jquery-ui-1.8.18.js" type="text/javascript"></script>
    <script src="~/Scripts/bootstrap.js" type="text/javascript" ></script>
    <script src="~/Scripts/knockout.js" type="text/javascript"></script>
    <script src="~/Scripts/underscore.js" type="text/javascript"></script>
    <script src="~/Scripts/backbone.js" type="text/javascript"></script>
    @RenderSection("Scripts", false)
</body>
</html>
